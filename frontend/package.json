{
  "name": "voting-stimmunterlagen-offline",
  "description": "The client is used to generate voting cards by input files which are delivered by the `Swiss Post`.",
  "author": "Abraxas Informatik AG",
  "version": "0.0.0-development",
  "license": "MIT",
  "main": "app/main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "ng": "ng",
    "ng:serve": "ng serve",
    "tsc-electron": "tsc -p tsconfig.electron.json",
    "electron:serve": "wait-on tcp:4200 && npm run tsc-electron && electron . --serve",
    "start": "cross-env NODE_ENV=development concurrently \"npm run ng:serve\" \"npm run electron:serve\"",
    "build": "npm run tsc-electron && ng build --base-href ./ -c production",
    "build-frontend": "npm run build && sh ./build-electron.sh",
    "build-backend": "cd ../backend && dotnet publish ./tools/ZipTool -c Release -o ./dist/ZipTool && dotnet publish ./tools/CryptoTool -c Release -o ./dist/CryptoTool && dotnet publish ./tools/chVoteToJsonConverter -c Release -o ./dist/chVoteToJsonConverter && dotnet publish ./tools/VotingCardGenerator -c Release -o ./dist/VotingCardGenerator && dotnet publish ./tools/PdfMerger -c Release -o ./dist/PdfMerger && cp -R ./tools/3rdPartyTools ./dist/3rdPartyTools/",
    "add-licenses": "mkdir -p packages/voting-stimmunterlagen-offline-win32-x64/Licenses && cp src/assets/pdfjs-dist/web/standard_fonts/LICENSE_* packages/voting-stimmunterlagen-offline-win32-x64/Licenses/ && cp src/assets/pdfjs-dist/web/cmaps/LICENSE packages/voting-stimmunterlagen-offline-win32-x64/Licenses/LICENSE_CMAPS",
    "create-hashes": "cp ../scripts/Compare-FileHashes.ps1 ./packages/voting-stimmunterlagen-offline-win32-x64/ && ../scripts/evaluate-filehashes_build.sh \"packages/voting-stimmunterlagen-offline-win32-x64\" \"./packages/$outputHashFile\"",
    "create-signatures": "../scripts/create-signatures.sh packages/voting-stimmunterlagen-offline-win32-x64 ../.secure_files/Codesigning.pfx $CODE_SIGNING_CERTIFICATE_PASSWORD",
    "compress-package": "cd packages/voting-stimmunterlagen-offline-win32-x64 && bestzip ../voting-stimmunterlagen-offline-win32-x64.zip *",
    "create-package": "npm run build-backend && npm run build-frontend && npm run add-licenses && outputHashFile=filehashes_build_before_signing.txt npm run create-hashes && npm run create-signatures && outputHashFile=filehashes_build.txt npm run create-hashes && npm run compress-package",
    "lint": "prettier --check ./src/**/*.{ts,scss} && ng lint && stylelint \"./src/**/*.scss\"",
    "fix": "prettier --write ./src/**/*.{ts,scss} && ng lint --fix && stylelint \"./src/**/*.scss\" --fix"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "14.2.12",
    "@angular/compiler": "14.2.12",
    "@angular/core": "14.2.12",
    "@angular/forms": "14.2.12",
    "@angular/language-service": "14.2.12",
    "@angular/platform-browser": "14.2.12",
    "@angular/platform-browser-dynamic": "14.2.12",
    "@angular/router": "14.2.12",
    "rxjs": "7.5.0",
    "tslib": "2.3.0",
    "zone.js": "0.11.8"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "14.2.10",
    "@angular-eslint/builder": "14.4.0",
    "@angular-eslint/eslint-plugin": "14.4.0",
    "@angular-eslint/eslint-plugin-template": "14.4.0",
    "@angular-eslint/schematics": "14.4.0",
    "@angular-eslint/template-parser": "14.4.0",
    "@angular/animations": "14.2.12",
    "@angular/cli": "14.2.10",
    "@types/node": "12.20.55",
    "@typescript-eslint/eslint-plugin": "5.36.2",
    "@typescript-eslint/parser": "5.36.2",
    "bestzip": "2.2.1",
    "concurrently": "7.6.0",
    "cross-env": "7.0.3",
    "electron": "23.1.0",
    "electron-builder": "23.6.0",
    "eslint": "8.28.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsdoc": "39.6.4",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-prettier": "4.2.1",
    "font-awesome": "4.7.0",
    "prettier": "2.8.4",
    "stylelint": "15.1.0",
    "stylelint-config-standard-scss": "7.0.1",
    "typescript": "4.6.2",
    "wait-on": "7.0.1"
  }
}
